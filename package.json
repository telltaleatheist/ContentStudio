{
  "name": "contentstudio",
  "version": "1.0.0",
  "description": "AI-powered metadata generation for YouTube and Podcasts",
  "asar": true,
  "main": "./dist/main/main.js",
  "scripts": {
    "clean": "rm -rf dist *.dmg *.dmg.blockmap",
    "clean:all": "npm run clean && rm -rf node_modules python/venv",
    "build:electron": "tsc -p tsconfig.electron.json",
    "build:preload": "tsc -p tsconfig.preload.json",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build:electron && npm run build:preload && npm run build:frontend",
    "start:angular": "cd frontend && npm start",
    "start:electron": "npm run build:electron && npm run build:preload && wait-on http://localhost:4200 && cross-env NODE_ENV=development ELECTRON_RUN_AS_NODE= electron .",
    "electron:dev": "concurrently --kill-others \"npm run start:angular\" \"npm run start:electron\"",
    "electron": "npm run build:all && cross-env ELECTRON_RUN_AS_NODE= electron .",
    "package": "npm run clean && npm run build:all && electron-builder build",
    "package:mac": "npm run clean && npm run build:all && electron-builder --mac",
    "setup:python": "cd python && python3 -m venv venv && source venv/bin/activate && pip install -r requirements.txt"
  },
  "keywords": [
    "metadata",
    "youtube",
    "spreaker",
    "ai",
    "ollama",
    "electron"
  ],
  "author": "Owen Morgan",
  "license": "MIT",
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.18.13",
    "concurrently": "^9.2.1",
    "cross-env": "^7.0.3",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "typescript": "^5.8.3",
    "wait-on": "^9.0.1"
  },
  "dependencies": {
    "electron-log": "^5.3.3",
    "electron-store": "^8.2.0",
    "js-yaml": "^4.1.0"
  },
  "build": {
    "appId": "com.owenmorgan.contentstudio",
    "productName": "ContentStudio",
    "asar": true,
    "compression": "maximum",
    "directories": {
      "output": "dist-build",
      "buildResources": "assets"
    },
    "extraResources": [
      {
        "from": "python",
        "to": "python",
        "filter": [
          "**/*",
          "!**/__pycache__",
          "!**/.*"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "frontend/dist/**/*",
      "!**/*.map",
      "node_modules/**/*",
      "!**/node_modules/**/test/**",
      "!**/node_modules/**/*.md"
    ],
    "mac": {
      "category": "public.app-category.utilities",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "hardenedRuntime": true,
      "gatekeeperAssess": false
    },
    "dmg": {
      "format": "ULFO",
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "icon": "assets/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "assets/icon.png",
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility"
    }
  }
}
